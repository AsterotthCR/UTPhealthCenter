<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HealthCare.Views.StudentRegisterPage"
             BackgroundColor="#FFF">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Label Text="Registro de Estudiantes/Pacientes"
                   FontSize="35"
                   FontAttributes="Bold"
                   TextColor="#014671"
                   HorizontalOptions="Center" />

            <Entry Placeholder="Nombre"
                   Text="{Binding Name}"
                   FontSize="20"
                   TextColor="#014671" />

            <Entry Placeholder="Apellido"
                   Text="{Binding LastName}"
                   FontSize="20"
                   TextColor="#014671" />

            <Entry Placeholder="DNI"
                   Text="{Binding DNI}"
                   FontSize="18"
                   TextColor="#014671"/>

            <Entry Placeholder="LocalizaciÃ³n"
                   Text="{Binding Location}"
                   FontSize="20"
                   TextColor="#014671" />

            <Button Text="Registrar Estudiante"
                    BackgroundColor="#014671"
                    TextColor="#FFFFFF"
                    FontSize="20"
                    Clicked="OnRegisterClicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
